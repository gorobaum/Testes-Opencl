CMAKE_MINIMUM_REQUIRED(VERSION 2.6)
project(matrixmulti)

#SET(CMAKE_MODULE_PATH ${matrixmulti_SOURCE_PATH}/../findcl)

#FIND_PACKAGE(OPENCL)

find_library(OPENCL OpenCL)
include_directories(${OPENCL}) 

message("OpenCL Library == ${OPENCL}")

INCLUDE_DIRECTORIES( 
    ${matrixmulti_SOURCE_DIR}/../opencl10
)

message("include directories: \n")
get_directory_property(includes INCLUDE_DIRECTORIES)
message("${includes}\n")

set(multilib opcl.c)
set(opcllib matrixmulti)
add_library(${opcllib} ${multilib})

set(exec matrix)
add_executable(${exec} main.c)

target_link_libraries(${exec} ${opcllib} ${OPENCL})
